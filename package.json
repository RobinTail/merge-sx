{
  "name": "merge-sx",
  "version": "0.1.0",
  "description": "Combines multiple SxProps for Material UI components.",
  "main": "dist/index.js",
  "author": {
    "name": "Anna Bocharova",
    "url": "https://robintail.cz"
  },
  "license": "MIT",
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "esm",
      "cjs",
      "iife"
    ],
    "splitting": false,
    "sourcemap": false,
    "minify": true,
    "clean": true,
    "dts": true
  },
  "scripts": {
    "build": "tsup",
    "lint": "eslint src",
    "test": "tsc --noEmit && jest"
  },
  "peerDependencies": {
    "@mui/material": "^5.1.0"
  },
  "devDependencies": {
    "@mui/material": "^5.10.12",
    "@swc/core": "^1.3.14",
    "@swc/jest": "^0.2.23",
    "@types/jest": "^29.2.2",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.27.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.2.2",
    "prettier": "2.7.1",
    "react": "^17",
    "react-dom": "^17",
    "tsup": "^6.4.0",
    "typescript": "^4.8.4"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": [
        "@swc/jest"
      ]
    },
    "collectCoverage": true,
    "coverageReporters": ["json", "lcov", "text", "html"]
  }
}
